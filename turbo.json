{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["built"],
      "inputs": ["src/**/*.ts", "src/**/*.test.ts"]
    },
    "lint": {},
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    }
  }
}